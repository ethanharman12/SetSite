@{
    ViewBag.Title = "Bots";
}

<h2>Bots</h2>
<div id="botsDiv">
    <div id="addDiv">
        <h4>Add Bot</h4>
        <button class="btn btn-default addPlayerButton" onclick="setApp.AddBot('Easy')">Easy</button>
        <button class="btn btn-default addPlayerButton" onclick="setApp.AddBot('Medium')">Medium</button>
        <button class="btn btn-default addPlayerButton" onclick="setApp.AddBot('Hard')">Hard</button>
    </div>
</div>
<div id="botsGrid">
    <div id="boardControls">
        <div id="setBoard">
        </div>
        <div id="scoreBoard">
            <div class="col-md-5">
                <label>Sets Found: <span id="setCount"></span></label>
                <label>Time Played: <span id="timePlayed"></span></label>
            </div>
            <div id="buttonContainer" class="col-md-7">
                <button id="generateButton" class="btn btn-default generateButton" onclick="setApp.StartGame()">Start</button>
                <button id="startButton" class="btn btn-success" onclick="setApp.ResumeGame()">Start</button>
                <button id="pauseButton" class="btn btn-danger" onclick="setApp.PauseGame()">Pause</button>
            </div>
        </div>
    </div>
    <div>
        <div id="foundSetsDiv">
            <label>Found Sets</label>
            <div id="foundSets"></div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/App_Scripts/Timer.js"></script>
    <script src="~/App_Scripts/SetUI.js"></script>
    <script src="~/App_Scripts/SetGame.js"></script>
    <script src="~/App_Scripts/Bots.js"></script>
}